{
  "name": "covid-19-esp",
  "version": "1.0.1",
  "main": "main.js",
  "author": "Sergio Rodriguez",
  "license": "ISC",
  "description": "Aplicación para ver la evolución del COVID-19 en España",
  "dependencies": {
    "bootstrap": "^4.4.1",
    "chart.js": "^2.9.3",
    "electron-dl": "^3.0.0",
    "electron-updater": "^4.2.5",
    "jquery": "^3.4.1",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1"
  },
  "scripts": {
    "start": "electron main.js",
    "dist": "electron-builder --win",
    "publish": "electron-builder -p always",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.covid-19-esp.app",
    "productName": "COVID-19 España",
    "copyright": "Copyright © 2020 Sergio Rodriguez",
    "win": {
      "publish": [
        {
          "provider": "github",
          "owner": "sergio9929",
          "repo": "covid-19-app"
        }
      ],
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.png"
    },
    "directories": {
      "output": "../COVID-19 CSV-app-nstaladores/build"
    },
    "portable": {
      "artifactName": "covid19_portable.exe"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    },
    "icon": "resources/icon.png"
  }
}